{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "tests": {
            "type": "array",
            "items": {
                "type": "object",
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "ping"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "source_nodes": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "target_ips": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "expect": {
                                    "type": "string"
                                },
                                "fail": {
                                    "type": "string"
                                },
                                "success": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "type",
                                "name",
                                "source_nodes",
                                "target_ips"
                            ],
                            "additionalProperties": false
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "_rip_validate"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "type": {
                                    "const": "_rip_validate"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "source_node": {
                                    "type": "string"
                                },
                                "target_ip4": {
                                    "type": "string"
                                },
                                "target_ip6": {
                                    "type": "string"
                                },
                                "router_turnoff": {
                                    "type": "string"
                                },
                                "router_checkriptable": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "type",
                                "name",
                                "source_node",
                                "router_turnoff",
                                "router_checkriptable"
                            ],
                            "additionalProperties": false
                        }
                    }
                ]
            }
        }
    },
    "required": [
        "tests"
    ]
}
